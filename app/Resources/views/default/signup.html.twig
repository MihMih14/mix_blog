{% extends 'base.html.twig' %}

{% block content %}
    <div class="" style="width: 20%; margin: auto;">
        <h1 style="text-align: center;">Регистрация</h1>
        <form class="" action="" method="post">

            <div class="form-group">
                <input class="form-control" type="text"
                       name="first-name" placeholder="Имя"
                       value="">
            </div>

            <div class="form-group">
                <input class="form-control" type="text"
                       name="last-name" placeholder="Фамилия"
                       value="">
            </div>

            <div class="form-group">
                <input class="form-control" type="email"
                       name="email" placeholder="Email">
            </div>

            <div class="form-group">
                <input class="form-control" type="date"
                       name="birthday" value="">
            </div>

            <div class="form-group">
                <input class="form-control" type="password"
                       name="password" placeholder="Пароль">
            </div>

            <div class="form-group">
                <input class="form-control" type="password"
                       name="confirm-password" placeholder="Повторите пароль">
            </div>

            <div class="form-group">
                <button class="btn btn-default" type="submit" name="submit">Зарегистрироваться</button>
            </div>
        </form>
    </div>

{% endblock %}